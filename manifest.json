{
  "manifest_version": 3,
  "name": "Chess.com Opponent Analyzer",
  "version": "1.0",
  "description": "Analyzes opponent data on Chess.com matches",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.chess.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.chess.com/*"],
      "css": ["styles/content.css"],
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  }
} 